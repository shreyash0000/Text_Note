<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Search">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/custom_header"
            layout="@layout/custom_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourfive" />

        <TextView
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_header"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:text="Set the Date"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />


        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_view"
            android:layout_margin="@dimen/onezero"
            android:layout_marginTop="@dimen/twofive"
            android:background="@drawable/btn_shape"
            android:backgroundTint="@color/gray_100" />


    </RelativeLayout>

</FrameLayout>