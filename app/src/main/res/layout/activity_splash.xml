<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.SplashActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/twofive"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/onezero"
        android:fontFamily="@font/roboto_regular"
        android:text="Text Note V1.1"
        android:textColor="@color/gray_500"
        android:textSize="@dimen/textonefour" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/onezero"
        android:fontFamily="@font/roboto_regular"
        android:text="Loading..."
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/onenine"
        android:textColor="@color/gray_500"
        android:textSize="@dimen/textoneeight" />

</RelativeLayout>