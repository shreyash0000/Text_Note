<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- change color && size of tab -->
    <style name="CustomViewAllTab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textonezero</item>
    </style>

    <!-- change color && size of search -->
    <style name="search_color">
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/textonezero</item>
    </style>

</resources>